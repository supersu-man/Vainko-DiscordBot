{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "rootDir": "./src",
      "outDir": "./dist",
      "removeComments": true,
      "moduleResolution": "bundler",      
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "strictNullChecks": true,
      "skipLibCheck": true
    }
  }